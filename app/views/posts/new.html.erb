<h1>New Post</h1>

<%= form_for :post, url: posts_path do |f| %>
	<p class="form-group">
		<%= f.label :title %> <br>
		<%= f.text_field :title, class: "form-control" %>
	</p>

	<p class="form-group">
		<%= f.label :body %> <br>
		<%= f.text_area :body, class: "form-control" %>
	</p>

	<p>
		<%= f.submit "Save Post", class: "btn btn-sm btn-primary" %>
	</p>

<% end %>